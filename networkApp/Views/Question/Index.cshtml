@model List<networkApp.ViewModels.Question>
@{
    ViewBag.Title = "Test #1";
}

<h3>В списке @Model.Count элемента</h3>

<form method="post">
    @foreach (var questions in Model)
    {

        <p>@questions.NumQuestion. @questions.TextQuestion</p>
        @for (Int32 i = 0; i < questions.NumAnswer.Count; i++)
        {
            <table class="table">
                <tr>
                    <td>
                        @questions.NumAnswer[i].ToString(). <input type="radio" name="@questions.TextQuestion" value="@questions.TextAnswer[i]" /> @questions.TextAnswer[i] <br />
                    </td>
                </tr>
            </table>
        }
    }

    <button type="submit" class="btn btn-primary">Ответить</button>
</form>
