@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewBag.Title = "Список ролей";
}

<h2>Список ролей</h2>
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td style="display: flex; flex-direction: row-reverse;">
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a class="btn btn-sm btn-primary role-btn" asp-action="Create" style="margin-right: 1rem; width: 10rem">Добавить роль</a>
<a class="btn btn-sm btn-primary role-btn" asp-action="UserList">Список пользователей</a>