@using System.IO
@{
    ViewBag.Title = "Управление лекцией";
}

<a class="btn btn-sm btn-primary" asp-controller="LectureConstructor" asp-action="Create">Создать лецию</a>

<table class="table">
    <tr><th>Наименование лекций</th><th></th></tr>
    @{
        DirectoryInfo dir = new DirectoryInfo(@"Views\Lecture\");

        foreach (var item in dir.GetFiles())
        {
            <tr>
                <td>@item.Name.Replace("_", " ").Replace(".cshtml", "")</td>

                <td>
                    <form method="post">
                        <button class="btn btn-sm btn-primary" value="@item.Name" name="fileName" asp-action="EditLecture">Изменить</button>
                        <button type="submit" class="btn btn-sm btn-danger" value="@item.Name" name="fileName" asp-action="DeleteLecture">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
