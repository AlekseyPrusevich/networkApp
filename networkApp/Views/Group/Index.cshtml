@model IEnumerable<networkApp.Models.GroupInfo>
@{
    ViewBag.Title = "Список групп";
}

<a class="btn btn-sm btn-primary role-btn" asp-action="Create">Добавить группу</a>

<table class="table">
    <tr><th>Номер группы</th><th>Специальность</th><th></th></tr>
    @foreach (var group in Model)
    {
    <tr>
        <td>@group.GroupNum</td>
        <td>@group.Specialize</td>
        <td style="display: flex; flex-direction: row-reverse;">
            <form asp-action="Delete" asp-route-id="@group.GroupInfoId" method="post">
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@group.GroupInfoId">Изменить</a>
                <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
            </form>
        </td>
    </tr>
    }
</table>