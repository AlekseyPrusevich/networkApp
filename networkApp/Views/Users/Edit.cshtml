@model networkApp.ViewModels.Users.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}

<div class="login-block registed-block">
    <h2 class="login__header">Редактирование пользователя @Model.Email</h2>
    <form asp-action="Edit" asp-controller="Users">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>

        <div class="login__group">
            <input asp-for="Email" class="login__input" type="text" required>
            <span class="login__highlight"></span>
            <span class="login__bar"></span>
            <label asp-for="Email" class="login__label">Логин/Email</label>
            <span asp-validation-for="Email"></span>
        </div>

        <div class="login__group">
            <input asp-for="FirstName" class="login__input" type="text" required>
            <span class="login__highlight"></span>
            <span class="login__bar"></span>
            <label asp-for="FirstName" class="login__label">Имя</label>
            <span asp-validation-for="FirstName"></span>
        </div>

        <div class="login__group">
            <input asp-for="LastName" class="login__input" type="text" required>
            <span class="login__highlight"></span>
            <span class="login__bar"></span>
            <label asp-for="LastName" class="login__label">Фамилия</label>
            <span asp-validation-for="LastName"></span>
        </div>

        <div class="login__group">
            <input asp-for="Group" class="login__input" type="text" required>
            <span class="login__highlight"></span>
            <span class="login__bar"></span>
            <label asp-for="Group" class="login__label">Группа</label>
            <span asp-validation-for="Group"></span>
        </div>

        <div class="login__submit">
            <input class="login__btn" type="submit" value="Изменить" />
        </div>
    </form>
</div>
