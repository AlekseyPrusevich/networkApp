@model IEnumerable<networkApp.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}

<h2 class="questions__title">Список пользователей</h2>

<a class="button button--create btn btn-sm btn-primary role-btn" asp-action="Create">Добавить пользователя</a>

<table class="table table--users">
    <tr>
        <th class="title-col--email">Email</th>
        <th class="title-col">Фамилия Имя</th>
        <th class="title-col--group">Группа</thclass="title-col--group">
        <th class="control-col"></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td class="title-col--email">@user.Email</td>
            <td class="title-col">@user.LastName @user.FirstName</td>
            <td class="title-col--group">@user.Group</td>
            <td class="control-col control-col--big">
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">
                        Изменить
                    </a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">
                        Сменить пароль
                    </a>
                    <a class="btn btn-sm btn-primary" asp-action="Access" asp-route-userid="@user.Id">
                        Права доступа
                    </a>
                    <button class="btn btn-sm btn-danger" type="submit">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>