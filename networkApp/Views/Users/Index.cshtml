@model IEnumerable<networkApp.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}

<a class="btn btn-sm btn-primary role-btn" asp-action="Create">Добавить пользователя</a>

<table class="table">
    <tr><th>Email</th><th>Фамилия Имя</th><th>Группа</th><th></th></tr>
    @foreach (var user in Model)
    {
<tr>
    <td>@user.Email</td>
    <td>@user.LastName @user.FirstName</td>
    <td>@user.Group</td>
    <td style="display: flex; flex-direction: row-reverse;">
        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
            <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
            <a class="btn btn-sm btn-primary" asp-action="Access" asp-route-userid="@user.Id">Права доступа</a>
            <button type="submit" class="btn btn-sm btn-danger">
                Удалить
            </button>
        </form>
    </td>
</tr>
    }
</table>