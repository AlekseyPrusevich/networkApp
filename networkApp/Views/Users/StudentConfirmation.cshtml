@model IEnumerable<networkApp.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}

<h2 class="questions__title mb-40">Список пользователей</h2>

<table class="table table--confirmation">
    <tr>
        <th class="title-col--email">Email</th>
        <th class="title-col">Фамилия Имя</th>
        <th class="title-col--group">Группа</th>
        <th class="control-col"></th>
    </tr>
    @foreach (var user in ViewBag.Users)
    {
        <tr>
            <td class="title-col--email">@user.Email</td>
            <td class="title-col">@user.LastName @user.FirstName</td>
            <td class="title-col--group">@user.Group</td>
            <td class="control-col control-col--small">
                <form asp-action="StudentConfirmation" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-primary">
                        Подтвердить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>